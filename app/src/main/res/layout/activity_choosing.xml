<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choosing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityChoosing">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="327dp"
        android:layout_height="650dp"
        android:visibility="invisible"
        android:id="@+id/recycler_view"
        app:layout_constraintBottom_toTopOf="@+id/button_to_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_show_choice">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/button_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-90dp"
        android:layout_marginEnd="-90dp"
        android:text="Поехали"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <Button
        android:id="@+id/button_show_choice"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="-700dp"
        android:text="показать точки"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="650dp"
        android:layout_marginStart="-100dp"
        android:layout_marginEnd="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/button_to_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_show_choice">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>